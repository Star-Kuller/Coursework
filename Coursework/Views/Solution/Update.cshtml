@model Coursework.Models.Entities.Solution

@{
    ViewData["Title"] = "Редактировать язык программирования";
}

<div class="text-center">
    <h1 class="display-4">Редактировать язык программирования</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <form method="post" asp-controller="ProgrammingLanguages" asp-action="Update">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill">Обновить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}